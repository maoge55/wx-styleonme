.goods {
  width: 750rpx;
}

.good-allchoose {
  width: 750rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #e0e0e0;
}

.good-check {
  width: 11%;
  text-align: center;
  padding: 8rpx 0;
}

.good-allchoose text {
  width: 89%;
  color: #5f6774;
  font-weight: normal;
  font-size: 12px;
  text-align: right;
  padding-right: 20rpx;
}

.good-info {
  width: 750rpx;
  display: flex;
  height: 100%;
  align-items: center;
}

.good-info .good-check {
  flex-shrink: 0 0 auto;
}

.good-info .image {
  width: 100%;
}
.tr-select{
  padding: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.tr-select select{
  color: #000;
}
.good-detail {
  width: 59%;
  color: #5f6774;
  font-weight: normal;
  padding: 8px 0;
  vertical-align: top;
  border: 0;
  padding-bottom: 0;
  font-size: 12px;
}

.blk {
  height: 10rpx;
}

.good-number {
  padding: 0;
  font-size: 12px;
  color: #5f6774;
  font-weight: normal;
  border-bottom: 1px solid #e0e0e0;
}

.cart-num-box {
  border-collapse: separate;
  background: #f5f5f5;
  margin: 10rpx 10rpx;
  padding: 0 8px;
  border-radius: 5px;
  display: flex;
  align-items: center;
}

.buy-num {
  width: 30%;
  flex: 0 0 auto;
}

.good-price {
  width: 60%;
  vertical-align: top;
  color: #333;
  text-align: right;
  padding-right: 20rpx;
  font-size: 12px;
}

.good-delete {
  flex: 0 0 auto;
  width: 10%;
  height: 44rpx;
  font-size: 0;
}

.good-delete image {
  width: 80%;
}
.price-total{
  width: 750rpx
}
.price-total-box{
  text-align: center;
      color: #5f6774;
    font-weight: normal;
    padding: 5rpx 0;
    border-bottom: 1px solid #e0e0e0;
}

.btn-list{
    margin: 40rpx auto 60rpx auto;
    background-color: #FFFFFF;
    display: flex;
    justify-content: center;
}

.btn-list button{
  border: 1px solid #000000;
  border-radius: 0;
  width: 30%;
  padding: 0;
  margin:0;
  margin-right: 15rpx;
  display: block; 
  flex: 0 0 auto;
  height: 100rpx;
  line-height: 100rpx;
}


.btbtn{    background-color: white;
    padding: 5px 0 5px 0;}

.page{
  display: flex;
  padding:  0 30rpx;
  justify-content: space-between;
}
.page button{
  font-size: 14px;
  padding: 10rpx 30rpx;
  background: #deaaff;

}


