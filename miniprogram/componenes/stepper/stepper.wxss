/* components/stepper/stepper.wxss */
.stepper {  
    width: 80px;  
    height: 25px;  
    /*给主容器设一个边框*/  
    border: 2rpx solid #ccc;  
    border-radius: 3px;
}  
  
/*加号和减号*/  
.stepper-text {  
    width: 24px;  
    line-height: 25px;  
    text-align: center;  
    float: left;  
}  
  
/*数值*/  
.stepper-input {  
    width: 30px;  
    height: 25px;  
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 12px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 2rpx solid #ccc;  
    border-right: 2rpx solid #ccc;  
}  
  
/*普通样式*/  
.normal{  
    color: black; }
/*禁用样式*/ 

.disabled{  
    color: #ccc;
    background: #dedede; 
} 