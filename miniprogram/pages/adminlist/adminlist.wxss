.blk{height: 20rpx;}
.title{
  font-size: 25px;
  padding-top: 15rpx;
  font-weight: bold;
  color:#000;
}
.class-name{
  width: 750rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0; 
}

/* pages/index/index.wxss */

.line{width: 750rpx; background: #ddd;height: 1px;margin-top:10rpx;}
.none{
  display: flex;
  justify-content: center;
  margin-top: 50%;
  color: #666;
}
.add{
  position: fixed;
  width: 750rpx;
  height: 120rpx;
  bottom: 0;
  z-index: 999;
  background: #fff;
}
.add button{
  margin: 0 10rpx;
  border-radius: 14rpx 15rpx;
  background-color: #1aad16;
  color: #ffffff;
}
.title-second{
  color:#e3921c;
  padding: 8rpx 0;
  width: 100%;
  display: inline-flex;
  justify-content: center;
  font-size: 18px;
  font-weight: 600;
  background: #f2f2f2;
}
.label{
  display: inline-flex;
  background: #f2f2f2;
  width: 750rpx;
  padding: 10rpx 0;
}
.label text{
  width: 180rpx;
  font-size: 16px;
  text-align: center;
  display: inline-block;
  font-weight: 600;
  color: #222
}

.content{
  width: 750rpx;
  display: inline-flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
  text-align: center;
  margin-top:10rpx; 
}
.content text{
  text-align: center;
  width: 180rpx;
  font-size: 12px;
  color:#444
}
.content button{
  padding: 0 10rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #ffffff;
}
.del{
  background-color: red;
  border: 1rpx solid red;
}
.update{
  margin-left: 10rpx;
  background-color: #1aad16;
}
.btn-page{
  width: 750rpx;
  display: flex;
  padding: 10rpx 10rpx 0 10rpx;
  justify-content: space-between;
  align-items: center;
}
.btn-page button{
  background: #854651;
  color: #fff;
}

.search{
  display: flex;
  align-items: center;
}

.search image{width: 40rpx; margin-right: 5rpx;}
.search input{width: 250rpx; font-size: 14px;}

.input-page{
  width: 50rpx;
}
